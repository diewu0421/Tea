
                                                            
    

                 
                                     
                                                                     
           
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_10dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical" android:tag="layout/activity_notification_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <!--top start -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:background="@color/color_ff6243">

            <ImageView
                android:id="@+id/noti_detail_goback"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_5dp"
                android:background="@mipmap/btn_fangx"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/notification_detail"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"

                />
        </RelativeLayout>
        <!--top end -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top_10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_1"                   
                android:textSize="@dimen/sp_20"
                android:textColor="@color/color_212121"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_2"                  
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/noti_detail_time"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_3"                       
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="binding_4"                     
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_4c4c4c"
                />

        </LinearLayout>

    </LinearLayout>
         