    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/normal_good_double"
        android:orientation="vertical" android:tag="layout/normal_good_double_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/split_line_color"/>-->

        <!--app:hotSellerImg="@{normalGood.goodImgUrl}"-->
        <ImageView
            android:id="@+id/home_hot_seller_img"
            android:layout_width="184dp"
            android:layout_height="186dp"
            android:background="@mipmap/bg_chany8"
            />

        <TextView
            android:id="@+id/good_item_seller_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/home_hot_seller_img"
            android:tag="binding_1"           
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/good_item_stadard"
            android:text="3个规格可选"
            android:layout_below="@id/good_item_seller_title"
            android:layout_alignLeft="@id/good_item_seller_title"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:id="@+id/home_hot_seller_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_item_stadard"
            android:layout_alignLeft="@id/good_item_stadard"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_price"
                android:textColor="@color/color_5e5e5e"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_13"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_2"           
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_17"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_13"

                />
        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/home_hot_seller_price"
            android:background="@mipmap/btn_cart"
            />

        <!--<include layout="@layout/split_line"/>-->
    </RelativeLayout>
         