<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gshl.tea"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.gshl.tea.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme_ChenJinShi" >
        <activity
            android:name="com.gshl.tea.activity.MainActivity"
            android:theme="@style/Theme_ChenJinShi" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gshl.tea.activity.LoginActivity"
            android:theme="@style/BaseTheme" >
        </activity>
        <activity android:name="com.gshl.tea.activity.RegisterActivity" >
        </activity>
        <activity android:name="com.gshl.tea.activity.InputCodeActivity" >
        </activity>
        <activity android:name="com.gshl.tea.activity.SetPasswordActivity" >
        </activity>
        <activity
            android:name="com.gshl.tea.module.good.ui.activity.SearchActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:theme="@style/Full_Screen_Animation"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name="com.gshl.tea.module.order.ui.activity.OrderDetailActivity" >
        </activity>
        <activity
            android:name="com.gshl.tea.module.order.ui.activity.GoodListActivity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity android:name="com.gshl.tea.module.good.ui.activity.GoodDetailActivity" >
        </activity>
        <activity android:name="com.gshl.tea.module.home.activity.MessageActivity" >
        </activity>
    </application>

</manifest>