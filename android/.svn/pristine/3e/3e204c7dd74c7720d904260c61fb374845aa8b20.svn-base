<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_f4f4f4"
    android:orientation="vertical"
    tools:context="com.gshl.tea.activity.RegisterActivity">

    <!--top start -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/register_activity_bg">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/btn_fangx"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/input_code"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"

            />
    </RelativeLayout>
    <!--top end -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="已向手机15580704295发送验证码"
            />

        <!--input phone number start-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/white_bg_radius"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="@string/please_input_code"
                android:background="@null"

                />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="@string/get_code"
                android:background="@drawable/border_left_1dp"
                />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/next_btn_bg"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="25sp"

            />
        <!--input phone number end-->
    </LinearLayout>

</LinearLayout>
