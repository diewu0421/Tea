
                                                            

    
                 
                           
                                                            
           
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="vertical" android:tag="layout/good_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="@dimen/margin_right_10dp"
            android:background="@drawable/border_bottom"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@mipmap/bg_tu08"
                android:id="@+id/good_list_img"
                android:tag="binding_1"         
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/good_list_right"
                android:layout_toRightOf="@id/good_list_img"
                android:layout_marginLeft="@dimen/margin_left_5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:tag="binding_2"             
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:id="@+id/good_list_title"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_7f7f7f"
                    android:text="dx16846664"
                    android:id="@+id/good_list_dx"
                    android:gravity="center_vertical"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_5e5e5e"
                        android:tag="binding_3"         
                        android:layout_alignParentBottom="true"
                        android:id="@+id/good_list_taste"

                        />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/good_list_privilege"
                        android:layout_toRightOf="@id/good_list_taste"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/margin_left_5dp"
                        android:background="@color/color_ff6243"
                        android:tag="binding_4"             
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"
                        android:gravity="center"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="@dimen/sp_14"
                        android:tag="binding_5"               
                        android:textColor="@color/color_ff6243"
                        android:layout_marginRight="50dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_6"         
                android:textColor="@color/color_ff6243"
                android:textSize="@dimen/sp_18"
                android:layout_below="@+id/good_list_right"
                android:layout_alignLeft="@+id/good_list_right"
                android:layout_alignStart="@+id/good_list_right"
                android:id="@+id/textView2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="@dimen/margin_left_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remark"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_606060"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:id="@+id/remark"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_7"          
                android:id="@+id/good_list_remark_tv"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_7f7f7f"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/remark"
                />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@mipmap/btn_edit"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_28dp"
                android:id="@+id/edit_ramark"
                />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:background="@color/split_line_color"
            android:layout_height="@dimen/margin_bottom_5dp"/>

    </LinearLayout>
         