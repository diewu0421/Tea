<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!--流水号 开始-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_11dp"
                    android:text="@string/serial_number"
                    android:textSize="@dimen/sp_14"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_122dp"
                        android:text="@string/please_input"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14"
                        />

                    <ImageView
                        android:id="@+id/serial_number_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/btn_fangxiang"

                        />
                </LinearLayout>

            </RelativeLayout>
            <!--流水号 结束-->

            <!--支付金额 开始-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_11dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:text="@string/pay_money"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/sp_14"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_top_10dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:background="@drawable/border_radius_gray"
                        android:gravity="center"
                        android:text="250.00"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_11dp"
                        android:text="元"
                        android:textColor="@color/color_7f7f7f"
                        android:textSize="@dimen/sp_14"
                        />

                </LinearLayout>

            </RelativeLayout>
            <!--支付金额 结束-->

            <!--支付日期 开始-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:background="@drawable/border_bottom"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_11dp"
                    android:text="@string/pay_date"
                    android:textSize="@dimen/sp_14"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_122dp"
                        android:text="@string/please_select"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/btn_fangxiang"
                        />
                </LinearLayout>


            </RelativeLayout>
            <!--支付日期 结束-->

            <include layout="@layout/split_line_16px"/>


            <!--收款账户 开始-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:background="@drawable/border_bottom"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_11dp"
                    android:text="@string/receive_moeny_accout"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"

                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/btn_fangxiang"
                        />
                </LinearLayout>
            </RelativeLayout>
            <!--收款账户 开始-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_left_11dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_5dp"
                    android:text="账户名称：深圳市古树互联信息技术公司"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_5dp"
                    android:text="开户银行：中国建设银行沙井支行"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_5dp"
                    android:text="开户账号：766320162017520"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/sp_14"
                    />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/split_line_16px">

        </include>

        <!--备注信息 开始-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:background="@drawable/border_bottom"
            android:paddingRight="@dimen/margin_20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_11dp"
                android:text="@string/remark_info"
                android:textSize="@dimen/sp_14"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/remark_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/sp_14"
                    />

            </LinearLayout>

        </RelativeLayout>
        <!--备注信息 结束-->

        <!--订单附件 开始-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:background="@drawable/border_bottom"
            android:paddingRight="@dimen/margin_20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_11dp"
                android:text="@string/order_attachment"
                android:textSize="@dimen/sp_14"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请添加"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/sp_14"
                    />

            </LinearLayout>

        </RelativeLayout>
        <!--订单附件 结束-->
    </LinearLayout>
</layout>