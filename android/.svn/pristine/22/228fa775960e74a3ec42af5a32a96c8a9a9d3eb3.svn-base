        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/order_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <!--top start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_ff6243"
            android:orientation="horizontal"
            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >

                <EditText
                    android:id="@+id/order_jumpToSeach"
                    android:layout_width="295dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/search_shape"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="@string/order_code_hint"
                    android:paddingLeft="@dimen/search_indent"
                    android:textColor="@color/color_bdbdbd"
                    android:textSize="@dimen/sp_15"

                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:background="@mipmap/bar_search"/>
            </RelativeLayout>


            <!--筛选 开始-->
            <LinearLayout
                android:id="@+id/order_filter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/filter"
                    android:textColor="@color/white"
                    />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/btn_saixuan"

                    />
            </LinearLayout>
            <!--筛选 结束-->
        </LinearLayout>
        <!--top end-->
        
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:background="@color/bg_color_f4f4f4"
            android:layout_height="match_parent"
            android:tag="binding_1"      
                                                   
            ></android.support.v7.widget.RecyclerView>
    </LinearLayout>
         