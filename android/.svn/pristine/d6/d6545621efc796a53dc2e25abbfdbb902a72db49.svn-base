                                                                   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:orientation="vertical"
        android:background="@drawable/corners_5dp"
         android:tag="layout/edit_remark_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/edit_remark_et"
            android:paddingTop="13dp"
            android:gravity="left|top"
            android:background="@null"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/split_line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_8c8c8c"
                android:gravity="center"
                android:id="@+id/edit_remark_cancel"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/split_line_color"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/confirm"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_ff6243"
                android:gravity="center"
                android:id="@+id/edit_remark_confirm"
                />


        </LinearLayout>
    </LinearLayout>
         