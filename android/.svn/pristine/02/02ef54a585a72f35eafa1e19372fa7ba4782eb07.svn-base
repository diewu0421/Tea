
                                                            

    

                 
                              
                                                                  
           
    <!--android:background="?android:attr/selectableItemBackground" 点击波纹效果-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical" android:tag="layout/collect_good_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


       <RelativeLayout
           android:layout_width="wrap_content"
           android:id="@+id/collect_good_checkbox"
           android:layout_height="90dp">
           <ImageView
               android:layout_width="0dp"
               android:layout_height="20dp"
               android:layout_centerVertical="true"
               android:background="@mipmap/btn_quan"
               android:id="@+id/collect_good_iv"
               />
       </RelativeLayout>
        
        <ImageView
            android:id="@+id/collect_good_img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:tag="binding_1"                 
            android:layout_toRightOf="@id/collect_good_checkbox"
            />



        <TextView
            android:id="@+id/collect_good_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/collect_good_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/collect_good_img"
            android:tag="binding_2"            
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            />


        <!--规格 优惠 开始-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/collect_good_img"
            android:layout_below="@id/collect_good_title"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:layout_marginTop="@dimen/margin_top_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_3"                         
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_7f7f7f"
                />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:tag="binding_4"                
                android:background="#f00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                />
        </LinearLayout>
        <!--规格 优惠 结束-->
        
        <LinearLayout
            android:id="@+id/collect_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/collect_good_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/collect_good_img"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_price"
                android:textColor="@color/color_5e5e5e"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_13"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_5"            
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_17"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_13"

                />
        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/collect_good_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/btn_cart"
            android:id="@+id/collect_good_shop_car"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/split_line_color"
            android:layout_alignBottom="@id/collect_good_shop_car"
            android:layout_marginTop="@dimen/margin_top_10dp"
            />
    </RelativeLayout>
         