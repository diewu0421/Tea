<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/bg_login_color"
                  android:fitsSystemWindows="true"
                  android:orientation="vertical">

        <!--top start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_27"
                />
        </RelativeLayout>
        <!--top end-->

        <!--middle start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/login_border_circle"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/bg_shouji"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:text="15874563440"
                    android:id="@+id/login_phone_et"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_border_circle"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                >

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/bg_mimin"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:id="@+id/login_pass_et"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:focusable="true"
                        android:text="123456"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/white"/>


                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:id="@+id/login_show_password"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@mipmap/bg_yj"
                            />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/phone_register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/register_by_phone"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/forget_password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/forget_pass"
                    />
            </RelativeLayout>
        </LinearLayout>
        <!--middle end-->

        <!--bottom start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">


            
            <TextView
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_btn_btn"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/color_ff6243"
                android:textSize="@dimen/sp_17"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/login_btn_btn"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/login_progress"
                android:orientation="horizontal">
                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:indeterminate="true"
                    android:layout_centerHorizontal="true"
                    android:indeterminateDrawable="@drawable/progress_rotate"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_10dp"
                    android:layout_height="wrap_content"
                    android:text="登录中......"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_ff6243"
                    />
            </LinearLayout>
        </RelativeLayout>
        <!--bottom end-->
    </LinearLayout>
</layout>