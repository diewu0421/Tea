<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="goodAdapter"
            type="com.gshl.tea.adapter.CommonRVAdapter"/>

        <variable
            name="categoryAdapter"
            type="com.gshl.tea.adapter.CommonRVAdapter"/>

        <variable
            name="rvManager"
            type="android.support.v7.widget.GridLayoutManager"/>

        <variable
            name="rvManagerLinear"
            type="android.support.v7.widget.LinearLayoutManager"/>

        <variable
            name="value"
            type="int"/>

        <variable
            name="jumpToSeach"
            type="android.view.View.OnClickListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/good_bg"
        android:orientation="vertical">
        <!--top start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_ff6243"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/toggleCategory"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/btn_caidan"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >

                <EditText
                    android:id="@+id/good_jumpToSeach"
                    android:layout_width="325dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/search_shape"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="@string/good_search_hint"
                    android:onClick="@{jumpToSeach}"
                    android:paddingLeft="@dimen/search_indent"
                    android:textColor="@color/color_bdbdbd"
                    android:textSize="@dimen/sp_15"

                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:background="@mipmap/bar_search"/>
            </RelativeLayout>
        </LinearLayout>
        <!--top end-->

        <com.gshl.tea.module.good.widgets.CustomHorizontalScrollView
            android:id="@+id/custom_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:customRight="130dp">

            <LinearLayout
                android:id="@+id/good_content_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/category_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adapter="@{categoryAdapter}"
                    app:layoutManager="@{rvManagerLinear}"></android.support.v7.widget.RecyclerView>

                <!--内容区域 开始-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <!--内容区域0 隐藏的条件选择 开始-->
                    <LinearLayout
                        android:id="@+id/filter_container"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/order_by_comprehensive"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:button="@null"
                                android:checked="true"
                                android:gravity="center"
                                android:text="@string/comprehensive"
                                android:textColor="@color/good_filter_text_color"
                                android:textSize="@dimen/sp_14"
                                />

                            <RadioButton
                                android:id="@+id/order_by_sales"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:button="@null"
                                android:gravity="center"
                                android:text="@string/sales"
                                android:textColor="@color/good_filter_text_color"
                                android:textSize="@dimen/sp_14"
                                />

                        </RadioGroup>
                        <!--按照价格排行 开始-->
                        <LinearLayout
                            android:id="@+id/order_by_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/filter_price"
                                android:textColor="@color/color_4c4c4c"
                                android:textSize="@dimen/sp_14"

                                />

                            <TextView
                                android:id="@+id/filter_arrow"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/tran_angle"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                        <!--按照价格排行 结束-->

                        <!--更改列表样式 开始-->

                        <LinearLayout
                            android:id="@+id/change_list_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:background="@mipmap/btn_dingdan"
                                />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:background="@color/split_line_color"/>


                        </LinearLayout>
                        <!--更改列表样式 开始-->

                        <!--筛选 开始-->
                        <LinearLayout
                            android:id="@+id/filter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/filter"
                                />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:background="@mipmap/btn_saixuan"

                                />
                        </LinearLayout>
                        <!--筛选 结束-->
                    </LinearLayout>
                    <!--内容区域0 隐藏的条件选择 结束-->

                    <!--内容区域1 进入全部商品 start-->
                    <RelativeLayout
                        android:id="@+id/all_shop_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/btn_shape"
                            android:gravity="center"
                            android:text="@string/goto_allShops"
                            android:textColor="@color/color_ff6243"
                            android:textSize="@dimen/sp_14"
                            />
                    </RelativeLayout>
                    <!--内容区域1 进入全部商品 end-->

                    <!--内容区域2 商品列表 start-->
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        app:adapter="@{goodAdapter}"
                        app:layoutManager="@{rvManager}"></android.support.v7.widget.RecyclerView>
                    <!--内容区域2 商品列表 end-->
                </LinearLayout>
                <!--内容区域 结束-->

            </LinearLayout>
        </com.gshl.tea.module.good.widgets.CustomHorizontalScrollView>
    </LinearLayout>
</layout>