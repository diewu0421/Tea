<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="recentOrderInfo"
            type="com.gshl.tea.module.home.bean.RecentOrderInfo"/>
    </data>
    <!--android:background="?android:attr/selectableItemBackground" 点击波纹效果-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">


       <RelativeLayout
           android:layout_width="wrap_content"
           android:id="@+id/recent_order_checkbox"
           android:layout_height="90dp">
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_centerVertical="true"
               android:background="@mipmap/btn_quan"
               android:id="@+id/recent_order_iv"
               />
       </RelativeLayout>
        
        <ImageView
            android:id="@+id/recent_order_img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:imgUrl="@{recentOrderInfo.imgUrlString}"
            android:layout_toRightOf="@id/recent_order_checkbox"
            />



        <TextView
            android:id="@+id/recent_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/recent_order_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/recent_order_img"
            android:text="@{recentOrderInfo.title}"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            />


        <!--规格 优惠 开始-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recent_order_img"
            android:layout_below="@id/recent_order_title"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:layout_marginTop="@dimen/margin_top_5dp"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@{recentOrderInfo.specificationCount}"-->
                <!--android:textSize="@dimen/sp_13"-->
                <!--android:textColor="@color/color_7f7f7f"-->
                <!--/>-->

            <!--<TextView-->
                <!--android:layout_width="15dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:text="@{recentOrderInfo.privilege}"-->
                <!--android:background="#f00"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/sp_13"-->
                <!--android:gravity="center"-->
                <!--/>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_5e5e5e"
                    android:text="@{recentOrderInfo.taste}"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/recent_order_taste"

                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/recent_order_privilege"
                    android:layout_toRightOf="@id/recent_order_taste"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_left_5dp"
                    android:background="@color/color_ff6243"
                    android:text="@{recentOrderInfo.privilege}"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:gravity="center"

                    />
            </RelativeLayout>
        </LinearLayout>
        <!--规格 优惠 结束-->
        
        <LinearLayout
            android:id="@+id/recent_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recent_order_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/recent_order_img"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_price"
                android:textColor="@color/color_5e5e5e"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_13"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recentOrderInfo.price}"
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_17"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/color_f23030"
                android:textSize="@dimen/sp_13"

                />
        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/recent_order_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/btn_cart"
            android:id="@+id/recent_order_shop_car"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/split_line_color"
            android:layout_alignBottom="@id/recent_order_shop_car"
            android:layout_marginTop="@dimen/margin_top_10dp"
            />
    </RelativeLayout>
</layout>