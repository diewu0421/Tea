<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginLeft="@dimen/margin_left_5dp"
        android:layout_marginRight="@dimen/margin_right_5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:background="@mipmap/btn_zip"
            android:layout_marginLeft="@dimen/margin_left_5dp"
            android:id="@+id/attach_icon"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfdasfdasfdasfasdfdas.zip"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_7f7f7f"
            android:layout_toRightOf="@id/attach_icon"
            android:layout_centerVertical="true"
            android:id="@+id/attach_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"

            android:layout_height="wrap_content"
            android:text="@string/download"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_40dp"
            />

    </RelativeLayout>
</layout>